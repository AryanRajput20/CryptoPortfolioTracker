<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cryptoportfoliotracker">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Crypto Portfolio Tracker"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CryptoPortfolioTracker">

        <!-- Main launcher activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Portfolio activity -->
        <activity
            android:name=".ui.PortfolioActivity"
            android:exported="false" />

        <!-- Coin detail activity -->
        <activity
            android:name=".ui.CoinDetailActivity"
            android:exported="false" />

    </application>

</manifest>

