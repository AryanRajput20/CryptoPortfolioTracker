<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Coin Name & Symbol -->
        <TextView
            android:id="@+id/coinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin (BTC)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Quantity, Buy Price, Current Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/coinQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty: 2.0"
                android:textSize="14sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/coinBuyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy: $25,000"
                android:textSize="14sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/coinCurrentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now: $30,000"
                android:textSize="14sp"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Profit / Loss -->
        <TextView
            android:id="@+id/coinProfitLoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P/L: +$10,000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>



